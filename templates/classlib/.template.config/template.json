{
    "$schema": "http://json.schemastore.org/template",
    "author": "Patrik Svensson",
    "classifications": [ "Common", "Library" ],
    "groupIdentity":"SpectreSystems.Templates.ClassLibrary",
    "identity": "SpectreSystems.Templates.ClassLibrary.CSharp",
    "name": "Spectre Systems Class Library",
    "shortName": "spectre-classlib",
    "sourceName": "MyClassLib",
    "preferNameDirectory": true,
    "sources": [
      {
        "modifiers": [
          {
            "condition": "(no-docs)",
            "exclude": [
              "docs/**/*"
            ]
          }
        ]
      }
    ],
    "symbols":{
      "no-docs":{
        "type": "parameter",
        "dataType":"bool",
        "defaultValue": "false"
      },
      "copyright": {
        "type": "parameter",
        "defaultValue": "Spectre Systems AB",
        "replaces":"Spectre Systems AB",
        "description": "The copyright holder"
      },
      "github-org": {
        "type": "parameter",
        "defaultValue": "spectresystems",
        "replaces": "spectresystems",
        "description": "The GitHub organization"
      },
      "author": {
        "type": "parameter",
        "defaultValue": "Patrik Svensson",
        "replaces": "Patrik Svensson",
        "description": "The author of the library"
      },
      "sponsor": {
        "type": "parameter",
        "defaultValue": "patriksvensson",
        "replaces": "patriksvensson",
        "description": "The GitHub Sponsors username"
      },
      "nameLower":{
        "type": "generated",
        "generator": "casing",
        "parameters": {
          "source":"name",
          "toLower": true
        },
        "replaces":"myclasslib"
      }
    }
  }